<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arbindtechguy.message.ProfileActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/default_profile"
        android:id="@+id/profile_visit_user_image"/>

    <TextView
        android:id="@+id/profileVisitUsername"
        android:layout_width="227dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="username"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_visit_user_image"
        app:layout_constraintVertical_bias="0.005" />

    <TextView
        android:id="@+id/profileVisitUserStatus"
        android:layout_width="284dp"
        android:layout_height="43dp"
        android:layout_marginBottom="152dp"
        android:gravity="center"
        android:text="Status"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/profileVisitRequestBtn"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="12dp"
        android:text="Send Friend Request"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/profileVisitDeclineRequest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileVisitUserStatus"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/profileVisitDeclineRequest"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Decline Friend Requet"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileVisitRequestBtn" />

</android.support.constraint.ConstraintLayout>
