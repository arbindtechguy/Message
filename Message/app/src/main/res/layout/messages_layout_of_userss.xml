<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/messages_profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/default_profile" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/messages_profile_image"
        android:layout_toRightOf="@+id/messages_profile_image"
        android:autoSizeMinTextSize="14dp"
        android:background="@drawable/messages_text_background"
        android:padding="3dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textColorHighlight="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textStyle="bold" />

</RelativeLayout>